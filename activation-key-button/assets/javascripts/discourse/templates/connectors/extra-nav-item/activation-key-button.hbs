{{#if currentUser.can_see_topic_group_button}}                                
<h3>                                                                          
  <button                                                                     
    class="btn topic-group-button"                                            
    title={{siteSettings.activation_key_button_title}}                           
    {{action "toggleBody"}}>{{siteSettings.activation_key_button_label}}         
  </button>                                                                   
  {{#if isShowingBody}}                                                       
<form>                                                                        
        <h3>Activation Request Key:</h3>                                      
        <input type="text">                                                   
        <br>                                                                  
        <button type="submit">Validate Request</button>                       
        <br>                                                                  
        <h3>Activation Key</h3>                                               
</form>                                                                       
  {{/if}}                                                                     
</h3>                                                                         
{{/if}}                                                                       
                                                                              
